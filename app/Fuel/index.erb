<div class="pageTitle">
  <h1>Fillup History</h1>
</div>

<div class="toolbar">
  <div class="leftItem regularButton">
    <a href="<%= url_for :controller => :Car, :action => :edit, :query => {:id => $car_id} %>">
      Edit Car Info
    </a>
  </div>
  <div class="centerItem regularButton">
    <a class="button" href="<%= url_for :action => :chart %>">Chart</a>
  </div>
  <div class="centerItem regularButton">
    <a class="button" href="<%= url_for :action => :chart %>">Stats</a>
  </div>
  <div class="rightItem regularButton">
    <a class="button" href="<%= url_for :action => :new %>">Add Entry</a>
  </div>
</div>

<table id="entries">
  <tr>
    <th>Mileage</th>
    <th>Distance</th>
    <th>Volume</th>
    <th>Price</th>
  </tr>
  <% @fuels.each_with_index do |fuel,i| %>
      <tr class=<%= i.odd? ?  "reg" : "alt"%>>
        <% [:mileage,:distance,:volume,:unit_price].each do |field| %>
          <td>
            <a href="<%=url_for :action => :edit, :id => fuel.object, :query => {:fuel_id => fuel.object} %>">    
              <%= fuel.send field %>
            </a>
          </td>
        <% end %>      
      </tr>
  <% end %>
</table>
