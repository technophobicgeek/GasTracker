<div class="pageTitle">
  <h1>Mileage Chart for <%=@carname%></h1>
</div>


<script  type="text/javascript" src="/public/jqtouch/jquery.1.3.2.min.js"></script>
<script  type="text/javascript" src="/public/jqtouch/jquery.jqplot.min.js"></script>
<link rel="stylesheet" type="text/css" href="/public/jqtouch/jquery.jqplot.css" />

<div class="chart">
  <div id="chartdiv" style="height:<%=$screen_height * 0.8%>px;width:<%= $screen_width * 0.8 %>px;"></div>
</div>

<script language="javascript" type="text/javascript"> 
  $(document).ready(function(){ 
    var values = <%=@values%>;
    plot = $.jqplot('chartdiv',  [values],{
        axes:{
          xaxis:{
              show:false,
              ticks: <%=@xticks%>,
              tickOptions:{show:false}
          },
          yaxis:{
              show:true,
              min:0,
              ticks: <%=@yticks%>,
              tickOptions: {
                showMark: false,
                markSize: 10,
                formatString: '%d'
              }
          }
        },
        grid: {
          borderWidth: 2.0,
          borderColor: '#7E3F12',
          background: '##DEDEDE',
          drawGridLines: true,
          gridLineColor: '#cccccc'
        }
      }
    ); 
    plot.redraw(); 
  }); 

</script>
