<div class="pageTitle">
  <h1>New <%= @car.title %></h1>
</div>

<div class="toolbar">
  <div class="leftItem backButton">
    <a class="cancel" href="<%= url_for :action => :index %>">Cancel</a>
  </div>
</div>

<div class="content">
  <form method="POST" action="<%= url_for :action => :create %>">
    <input type="hidden" name="id" value="<%= @car.object %>"/>
    <ul>
      
          <li>
            <label for="car[name]" class="fieldLabel">Name</label>
            <input type="text" name="car[name]" <%=
            placeholder("Name") %> />
          </li>
      
    </ul>
    <input type="submit" class="standardButton" value="Create Car"/>
  </form>
</div>

<div class="custom">
  <span class="help">
    Give this car a name that helps you identify it. You can change it later in the settings.
  </span>
</div>